<div class='card'>
	<h3>FaÃ§a parte desse time de desenvolvedores</h3>
	<div>
		<% if @proposal.errors.any? %>
		  <ul>
		    <% @proposal.errors.full_messages.each do |error| %>
		      <li><%= error %></li>
		    <% end %>
		  </ul>
		<% end %>
	</div>
	<div>
		<%= form_with model: [@project, @proposal] do |f|%>
		<p><%= f.label :motivation %>
			<%= f.text_area :motivation %></p>
		<p><%= f.label :hourly_rate %>
			<%= f.text_field :hourly_rate %></p>
		<p><%= f.label :weekly_available_hours %>
			<%= f.number_field :weekly_available_hours, min: 1, max: 44, step: 1 %></p>
		<p><%= f.label :expected_completion %>
			<%= f.date_field :expected_completion %></p>
		<br>
		<%= f.submit 'Enviar proposta' %>
		<% end %>
	</div>
</div>